[% page.title = 'use.perl.org journal of ' _ user.nickname _ ': ' _
journal.description %]

<div class="container">

<div class="row">

<div class="span4">
<h1>[% journal.description | html  %]</h1>
<h2><a href="[% '/~' _ user.nickname _ '/'  %]">[% user.nickname |
